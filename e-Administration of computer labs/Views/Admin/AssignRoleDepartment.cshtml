@model AssignRoleDepartmentViewModel



<form asp-action="AssignRoleDepartment" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Role</label>
        <select asp-for="SelectedRoleId" class="form-control" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"></select>
    </div>
    
    <br>

    <div class="form-group">
        <label>Department</label>
        <select asp-for="SelectedDepartmentId" class="form-control" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Assign</button>
</form>
